@model TimeTracker.Models.WorkingCardModel

@{
    ViewBag.Title = "FillWorkingCard";
}

<p>
    This is the place where you fill your working card. Note that, once filled, working card can not be changed!
</p>
<br />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>WorkingCardModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        
        <div class="editor-field">
            @(Html.Kendo().DatePicker()
                .Name("StartDate")
                .Min(new DateTime(1900, 1, 1)) 
                .Max(new DateTime(2099, 12, 31)) 
                .Format("dd/MM/yyyy")

            )
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.WorkingHours)
        </div>
        <div class="editor-field">
            <p>
                Note: Maximum 14 hours allowed. Use format: HH:MM, where HH is for hours, MM is for minutes.
            </p>
            @Html.EditorFor(model => model.WorkingHours)
            @Html.ValidationMessageFor(model => model.WorkingHours)
            
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>



        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Current", "Task")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/kendo")
}
