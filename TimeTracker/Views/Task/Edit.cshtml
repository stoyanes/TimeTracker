@model TimeTracker.Models.TaskViewModel

@{
    ViewBag.Title = "Edit";
}


<h2>Edit</h2>

@using (Html.BeginForm())

{
    
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TaskViewModel</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @if (Model.StartDate.HasValue)
            {
                @Html.EditorFor(model => model.StartDate.Value);
                @Html.ValidationMessageFor(model => model.StartDate)
            }
            else
            {
                @Html.EditorFor(model => model.StartDate);
                @Html.ValidationMessageFor(model => model.StartDate);
            }
        </div>

        <div class="editor-label">
            <label for="StatusId">Task Status</label>
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.StatusId,
            new SelectList(
                new List<Object> {
                    new { value = 1 , text = "New"  },
                    new { value = 2 , text = "Started" },
                    new { value = 3 , text = "Finished"},
                    new {value = 4, text = "Canceled"}
                },
                "value",
                "text"
                ))
        </div>

        <div class="editor-label">
            <label for="UserId">User to work on it</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("TaskToUser", new SelectList(ViewBag.users, "UserId", "UserName"))
            @Html.
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style scoped>
    #example h2 {
        font-weight: normal;
    }
    #email-settings {
        height: 135px;
        width: 395px;
        margin: 30px auto;
        padding: 110px 0 0 30px;
        background: url('@Url.Content("~/Content/web/datepicker/mailSettings.png")') transparent no-repeat 0 0;
    }
    
</style>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
