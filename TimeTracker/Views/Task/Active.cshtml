@model IEnumerable<TimeTracker.Models.TaskViewModel>

@{
    ViewBag.Title = "All active tasks";
}

@(Html.Kendo().Grid(Model)
    .Name("ActiveTasks")
    .Columns(columns =>
    {
        columns.Bound(p => p.Title);
        columns.Bound(p => p.Description);
        columns.Bound(p => p.StartDate).Title("Start date");
        columns.Bound(p => p.WorkedHoursCurrent).Title("Worked hours");
        columns.Bound(p => p.StatusMess).Title("Status");
        columns.Template(o => Html.ActionLink("Details", "Details", "Task", new {id = o.Id }, null));
        columns.Template(o => Html.ActionLink("Edit", "Edit", "Task", new { id = o.Id }, null));
        
    })
    .Sortable()
    .Pageable()
)   

