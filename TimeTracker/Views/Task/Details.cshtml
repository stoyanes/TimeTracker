@model IEnumerable<TimeTracker.Models.UserTaskViewModel>

@{
    ViewBag.Title = "Details";
}


@(Html.Kendo().Grid(Model)
    .Name("TaskDetails")
    .Columns(columns =>
    {
        columns.Bound(p => p.UserName);
        columns.Bound(p => p.FirstName);
        columns.Bound(p => p.LastName);
        columns.Bound(p => p.Title).Title("Task title");
        columns.Bound(p => p.WorkedHoursCurrent).Title("Worked hours");
        
    })
    .Sortable()
    .Pageable()
)  
